@model PortfolioPanel.Models.BlogIndexViewModel

@{
    ViewBag.Title = Model.ViewTitle;
}

<div class="card">
    <div class="card-header bg-gradient-info align-middle">
        <h4 class="text-light float-left m-0">@Model.ViewTitle</h4>
        @Html.ActionLink("Create New Post", "Create", "Blog", new { }, new { @class = "btn btn-light btn-sm float-right" })
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered bg-white text-center" id="posts">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Publish Date</th>
                    <th>Create Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Posts)
                {
                    <tr>
                        <td><img src="@item.FeaturedImage" class="img-thumbnail" /></td>
                        <td>@item.Title</td>
                        <td>@item.PDate</td>
                        <td>@item.CDate</td>
                        <td>
                            @if (item.IsDraft)
                            {
                                <i class="fas fa-pen text-dark"></i>
                            }
                            else
                            {
                                <i class="fas fa-pen text-success"></i>
                            }
                            @if (item.Active)
                            {
                                <i class="fas fa-check-circle text-success"></i>
                            }
                            else
                            {
                                <i class="fas fa-times-circle text-danger"></i>
                            }
                            @if (item.Deleted)
                            {
                                <i class="fas fa-trash text-danger"></i>
                            }
                            else
                            {
                                <i class="fas fa-trash text-success"></i>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

